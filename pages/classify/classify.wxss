.goods-content {
  margin-top: 90rpx;
  background: #fff;
}
.left-scroll-nav{
  position: fixed;
  left: 0;
  bottom: 0;
  top: 90rpx;
  width: 25%;
  height: 100%;
  background: #f4f4f4;
}
#right-scroll-nav{
  position: absolute;
  right: 0;
  width: 74%;
}
.weui-navbar__item{
  border-top: 1rpx solid #dddddd;
  border-right: 2rpx solid #eaeaea;
  box-sizing: border-box;
}
.wn-bind:last-child{
  border-bottom: 1rpx solid #dddddd;
}
.weui-bar__item_on {
  background: #ffffff;
  border-left: 6rpx solid #006439;
  border-right: 0;
  color: #00824a;
  box-sizing: border-box;
}
.weui-bar__left{
  margin-left: -6rpx;
}
.weui-tab__content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-content: center;
  overflow: hidden;
}

.wn-goods-list {
  flex: 0 0 48%;
  margin-right: 2%;
  border-radius: 10rpx;
  border: solid 2rpx #e8e8e8;
  box-sizing: border-box;
  margin-bottom: 32rpx;
}

.wn-goods-img {
  width: 100%;
  height: 330rpx;
}

.goods-message {
  font-size: 24rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0px;
  line-height: 38rpx;
  color: #222222;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  padding: 16rpx 10rpx 4px 10px;
}

.goods-price {
  display: block;
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 30rpx;
  letter-spacing: 0px;
  color: #00824a;
  text-align: right;
  padding-right: 10rpx;
  padding-top: 6px;
}